@model BullSurvey.Models.AboutUsViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@Model.WebsiteName - About Us Overview</title>
</head>
<body class="bg-gray-50">
    <div class="container mx-auto px-4 py-8">
        <!-- About Us Summary -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold mb-8 text-gray-800">@Model.WebsiteName - About Us</h1>
            <p class="text-gray-600 mt-2 mb-6">@Model.Description</p>
            <a href="/AboutUs/AboutUs" class="text-blue-600 underline hover:text-blue-800">Learn more about our team</a>
        </div>

        <!-- Team Members Flexbox Layout -->
        <div class="flex gap-6 justify-center">
            @foreach (var member in Model.TeamMembers.Take(4))
            {
                <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition-shadow duration-300 text-center w-1/2 sm:w-1/3 lg:w-1/4">
                    <img src="@member.PhotoUrl" alt="@member.Name's photo" class="w-24 h-24 rounded-full mx-auto mb-4 object-cover" />
                    <h3 class="text-lg font-semibold text-green-500">@member.Name</h3>
                    <p class="text-gray-600">@member.Role</p>
                </div>
            }
        </div>
    </div>
</body>
</html>
