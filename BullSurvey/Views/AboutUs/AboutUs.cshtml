            <h1 class="text-4xl font-extrabold text-green-600 mb-4">About Us</h1>
            <p class="text-lg text-gray-500 mb-8">@Model.Description</p>
            <div>
                <button onclick="toggleSection('aboutUs')" class="text-lg text-white bg-green-600 hover:bg-green-700 px-6 py-3 rounded-lg transition duration-300 ease-in-out mx-2">About Us</button>
                <button onclick="toggleSection('dataModel')" class="text-lg text-white bg-blue-600 hover:bg-blue-700 px-6 py-3 rounded-lg transition duration-300 ease-in-out mx-2">Data Model</button>
            </div>
        </div>

        <!-- About Us Section -->
        <div id="aboutUs" class="fade hidden">
            <div class="grid gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
                @foreach (var member in Model.TeamMembers)
                {
                    <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow duration-300 text-center">
