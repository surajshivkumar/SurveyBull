<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>About Us - @Model.WebsiteName</title>
    <script>
        // Function to toggle visibility with transitions
        function toggleSection(section) {
            const aboutUsSection = document.getElementById('aboutUs');
            const dataModelSection = document.getElementById('dataModel');

            if (section === 'aboutUs') {
                aboutUsSection.classList.remove('hidden');
                dataModelSection.classList.add('hidden');
            } else if (section === 'dataModel') {
                aboutUsSection.classList.add('hidden');
                dataModelSection.classList.remove('hidden');
            }
        }
    </script>
    <style>
        .fade {
            transition: opacity 0.5s ease-in-out;
        }
    </style>
</head>
