                            <img src="@member.PhotoUrl" alt="@member.Name's photo" class="w-32 h-32 object-cover" />
                        </div>
                        <h3 class="text-xl font-semibold text-green-600">@member.Name</h3>
                        <p class="text-gray-600">@member.Role</p>
                        <p class="mt-4 text-gray-700 text-sm">@member.Bio</p>
