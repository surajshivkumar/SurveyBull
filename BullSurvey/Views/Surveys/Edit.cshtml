@model BullSurvey.Models.Survey

<div class="max-w-3xl mx-auto p-8 bg-white rounded-lg shadow-xl mt-10">
    <h2 class="text-4xl font-bold text-gray-800 mb-8 text-center">Edit Survey</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="SurveyId" />

        <!-- Survey Title and Description -->
        <div class="mb-8">
            <label asp-for="Title" class="block text-xl font-semibold text-gray-700">Title</label>
            <input asp-for="Title" class="mt-2 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-gray-800" />
            <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-8">
            <label asp-for="Description" class="block text-xl font-semibold text-gray-700">Description</label>
            <textarea asp-for="Description" rows="3" class="mt-2 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-gray-800"></textarea>
            <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
        </div>

        <!-- Questions Section -->
        <div class="mt-10">
            <h3 class="text-2xl font-semibold text-gray-800 mb-6 border-b-2 border-gray-200 pb-2">Questions</h3>

            @for (int i = 0; i < Model.Questions.ToList().Count; i++)
            {
                <div class="bg-gray-50 p-6 mb-6 rounded-lg shadow-md border border-gray-200">
                    <label class="block text-lg font-medium text-gray-700 mb-2">Question</label>
                    <input type="text" asp-for="@Model.Questions.ToList()[i].Text" class="mt-2 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-gray-800" />

                    <!-- Options for each question -->
                    <div class="mt-4">
                        <h4 class="text-md font-semibold text-gray-600 mb-2">Options</h4>
                        <div class="space-y-2">
                            @for (int j = 0; j < Model.Questions.ToList()[i].Options.ToList().Count; j++)
                            {
                                <input type="text" asp-for="@Model.Questions.ToList()[i].Options.ToList()[j].Text" class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-gray-800" placeholder="Option text" />
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Save and Cancel Buttons -->
        <div class="mt-8 flex justify-center space-x-4">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg shadow-md transition duration-300">Save</button>
            <a asp-action="Index" class="bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-6 rounded-lg shadow-md transition duration-300">Back to List</a>
        </div>
    </form>
</div>
