@model IEnumerable<BullSurvey.Models.Survey>

<h1 class="text-3xl font-bold mb-8 text-center text-green-500">Surveys</h1>

<div class="mb-8 text-right">
    <a asp-action="Create" class="bg-primary hover:bg-secondary text-white font-bold py-2 px-4 rounded shadow-lg transition duration-300">
        Create New Survey
    </a>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    @foreach (var survey in Model)
    {
        <div class="bg-white p-6 rounded-lg shadow-lg border border-gray-200">
            <!-- Survey Title and Publish Button -->
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-2xl font-semibold text-gray-800">@survey.Title</h2>

                <!-- Publish/View Link Button -->
                <a asp-action="Publish" asp-route-id="@survey.SurveyId"
                   class="bg-green-500 hover:bg-yellow-600 text-white font-semibold py-1 px-3 rounded shadow-md transition duration-300">
                    @if (survey.IsPublished)
                    {
                        <span>View Link</span>
                    }
                    else
                    {
                        <span>Publish</span>
                    }
                </a>
            </div>

            <!-- Survey Description with Line Clamp -->
            <p class="text-gray-600 mb-4 line-clamp-3">@survey.Description</p>

            <!-- Buttons at the bottom, same line -->
            <div class="flex space-x-3 mt-4">
                <a asp-action="Details" asp-route-id="@survey.SurveyId" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded transition duration-300">
                    Details
                </a>
                <a asp-action="Edit" asp-route-id="@survey.SurveyId" class="bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded transition duration-300">
                    Edit
                </a>
                <a asp-action="Delete" asp-route-id="@survey.SurveyId" class="bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded transition duration-300">
                    Delete
                </a>
            </div>
        </div>
    }
</div>

