@model BullSurvey.Models.Survey

<div class="max-w-3xl mx-auto p-6 bg-white rounded-lg shadow-lg mt-10 text-center">
    <h1 class="text-3xl font-bold text-gray-800 mb-4">Survey Published</h1>
    <p class="text-gray-600 mb-6">Your survey is now live! Share the link below or scan the QR code to participate.</p>

    <!-- Display Survey Link -->
    <p class="text-blue-500 font-semibold mb-4">
        <a href="https://survey-bull.vercel.app/surveys/@Model.SurveyId" target="_blank">
            https://survey-bull.vercel.app/surveys/@Model.SurveyId
        </a>
    </p>

    <!-- QR Code -->
    <canvas id="qr-code" class="mx-auto mb-6"></canvas>

    <!-- QR Code JavaScript using QRious -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrious/4.0.2/qrious.min.js"></script>
    <script>
        // Generate QR code for the survey link
        new QRious({
            element: document.getElementById('qr-code'),
            value: 'https://survey-bull.vercel.app/surveys/@Model.SurveyId',
            size: 150,
            background: '#ffffff',
            foreground: '#000000'
        });
    </script>

    <!-- Back to Surveys Button -->
    <a asp-action="Index" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded shadow-lg transition duration-300">
        Back to Surveys
    </a>
</div>
