@model BullSurvey.Models.Survey

<h2 class="text-2xl font-bold text-center text-red-600 mb-6">Delete Survey</h2>

<div class="text-center">
    <h3 class="text-lg font-semibold mb-4 text-gray-700">Are you sure you want to delete this survey?</h3>
    <div class="bg-white shadow-md rounded-md p-6 max-w-md mx-auto">
        <h4 class="text-xl font-semibold text-gray-800 mb-3">Survey Details</h4>
        <dl class="grid grid-cols-2 gap-y-2 text-left">
            <dt class="font-medium text-gray-600">Title:</dt>
            <dd class="text-gray-800">@Model.Title</dd>

            <dt class="font-medium text-gray-600">Description:</dt>
            <dd class="text-gray-800">@Model.Description</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-6 flex justify-center space-x-4">
    <input type="hidden" asp-for="SurveyId" />
    <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded shadow-lg transition duration-300">
        Delete
    </button>
    <a asp-action="Index" class="bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded shadow-lg transition duration-300">
        Back to List
    </a>
</form>
